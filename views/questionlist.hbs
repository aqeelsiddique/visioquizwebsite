<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Manage <b>QuestionName</b></h2>
					</div>
					<div class="col-sm-6">
						<form method="post" action="/add_Question">
							<button class="btn btn-success" data-toggle="modal">
								Add New Question
								<i class="material-icons">&#xE147;</i>
							</button>

							{{!-- <a href="/add_Question" class="btn btn-success" data-toggle="modal"><i
									class="material-icons">&#xE147;</i> <span>Add New Question</span></a> --}}
							{{!-- <a href="/deltedata/{{this._id}}" class="btn btn-danger" data-toggle="modal"><i
									class="material-icons">&#xE15C;</i> <span>Delete</span></a> --}}
						</form>
						<form method="" action="/list_subjects">
							<button class="btn btn-danger" data-toggle="modal">
								Subject_Wise
								<i class="material-icons">&#xE15C;</i>
							</button>

						</form>


					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>
							<span class="custom-checkbox">
								<input type="checkbox" id="selectAll">
								<label for="selectAll"></label>
							</span>
						</th>
						<th>Question</th>
						<th>option1</th>
						<th>option2</th>
						<th>option3</th>
						<th>option4</th>
						<th>correct option</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{{#each list_question}}
					<tr>
						<td>
							<span class="custom-checkbox">
								<input type="checkbox" id="checkbox1" name="options[]" value="1">
								<label for="checkbox1"></label>
							</span>
						</td>
						<td>
							{{#if this.image}}
							<img src="/images/{{this.image}}" alt="Question Image"
								style="max-width: 50px; max-height: 50px;">
							{{else}}
							{{this.ques}}
							{{/if}}
						</td>
						<td>{{this.option1}}</td>
						<td>{{this.option2}}</td>
						<td>{{this.option3}}</td>
						<td>{{this.option4}}</td>
						<td>{{this.ans}}</td>




						<td> <a href="/update_Question/{{this.ques}}" class="fa fa-edit"
								style="font-size:25px;color:rgb(80, 85, 87);"
								onclick="return confirm('Are you sure to update this record ?');"></a></td>
						<td>



							<a href="/delete_Question/{{_id}}" class="fa fa-trash" style="font-size:25px;color:red" ;
								onclick="return confirm('Are you sure to update this record ?');"> </a>


						</td>
					</tr>
					{{/each}}
				</tbody>

			</table>
		</div>
	</div>
</div>